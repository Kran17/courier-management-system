<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h2>Signup</h2>
        <form id="signupForm" action="/signup" method="post">
            <label for="username">Email or Phone Number:</label>
            <input type="text" id="username" name="username" required><br>
            <span id="usernameError" class="error"></span><br> <!-- Error message container -->
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <button type="submit" id="signupButton" disabled>Signup</button>
        </form>
        <p>Already have an account? <a href="/login">Login</a></p>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const usernameInput = document.getElementById("username");
            const usernameError = document.getElementById("usernameError");
            const signupButton = document.getElementById("signupButton");

            // Function to validate the username field
            function validateUsername() {
                const username = usernameInput.value.trim();
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                const phonePattern = /^\d{10}$/;
                if (!emailPattern.test(username) && !phonePattern.test(username)) {
                    usernameError.textContent = "Please enter a valid email or phone number.";
                    return false;
                } else {
                    usernameError.textContent = ""; // Clear any previous error message
                    return true;
                }
            }

            // Event listener for input event on username field for real-time validation
            usernameInput.addEventListener("input", function() {
                validateUsername();
                // Enable or disable signup button based on validation result
                signupButton.disabled = !validateUsername();
            });
        });
    </script>
</body>
</html>

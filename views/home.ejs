        <br>
        <a href="/adddelivery" class="btn btn-outline-success"id="addDeliveryBtn">Add Delivery</a>
    <div class="container align-center" > <!-- Added text-center class -->
        
        <div class="row row-cols-1 row-cols-md-4 g-5" id="deliveryBoxes">
            <% deliveries.forEach(delivery => { %>
                <div class="col">
                    <div class="card mb-3 " style="width: 20rem;">
                        
                        <div>
                            <div class="card-header">
                                <p>Package Name: <%= delivery.packagename %></p>
                            </div>
                            
                            <p>Delivery date: <%= delivery.deliveryTime %></p>
                            <!-- Add more fields as needed -->
                            
                        </div>
                        <div class="card-footer">
                            <form action="/deleteDelivery" method="POST">
                                <input type="hidden" name="deliveryId" value="<%= delivery._id %>">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                            <form action="/editDelivery" method="GET">
                                <input type="hidden" name="deliveryId" value="<%= delivery._id %>">
                                <button type="submit" class="btn btn-outline-primary">Edit</button>
                            </form>
                        </div>
                        
                    </div>
                    
                </div>
            <% }); %>
        </div>
    </div>    
    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('addDeliveryBtn').addEventListener('click', function(event) {
            event.preventDefault();
            var deliveryBoxes = document.getElementById('deliveryBoxes');
            var newBox = document.createElement('div');
            newBox.className = 'col';
            newBox.innerHTML = '<div class="box"><h2>Delivery</h2><p>New delivery content...</p></div>';
            deliveryBoxes.appendChild(newBox);
            window.location.href = "/adddelivery";
        });
    </script>
